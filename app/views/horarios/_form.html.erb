<%= form_for(@horario) do |f| %>
  <% if @horario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@horario.errors.count, "error") %> prohibited this horario from being saved:</h2>

      <ul>
      <% @horario.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :hora %><br>
    <%= f.text_field :hora, class: "datepicker" %>
  </div>
  <div class="field">
    <%= f.label :academia_id %><br>
    <%= f.select :academia_id, options_for_select(Academia.all.map{|m|[m.nome,
m.id]},f.object.academia_id) %>
</div>
  <div class="field">
    <%= f.label :professor_id %><br>
    <%= f.select :professor_id, options_for_select(Professor.all.map{|m|[m.nome,
m.id]},f.object.professor_id) %>
<br></br>
<div class="actions">
<%= f.submit 'Salvar', :class => 'btn btn-primary' %>
<%= link_to ' Voltar', horarios_path , class: "btn btn-default " %>
</div>
<% end %>
<script type="text/javascript">
$(document).ready(function(){
$('.datepicker').datepicker({format: 'yyyy-mm-dd'});
$('#matricula').inputmask("9999.9.999.9999");
});
</script>
