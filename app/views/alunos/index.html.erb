<h1>Listing Alunos</h1>
<%= image_tag 'agachamento.gif', :width => '15%', :height => '15%'  %>
<hr/> 
  <%= render 'formbusca' %>
<hr/>
<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Telefone</th>
      <th>Endereco</th>
      <th>Cpf</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alunos.each do |aluno| %>
      <tr>
        <td><%= aluno.nome %></td>
        <td><%= aluno.telefone %></td>
        <td><%= aluno.endereco %></td>
        <td><%= aluno.cpf %></td>
        <td><%= link_to 'Show', aluno %></td>
        <td>
        <%= link_to ' ', edit_aluno_path(aluno),  class: "glyphicon glyphicon-pencil" %>
          <%= link_to ' ', aluno, method: :delete, data: { confirm: 'Are you sure?' } , class: "glyphicon glyphicon-trash" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
